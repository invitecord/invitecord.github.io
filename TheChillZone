    <script>
        let progress = 0;
        // Replace with the actual invite if available, currently generic
        const inviteLink = "https://discord.gg/your-invite-here"; 
        
        const loader = document.getElementById('loader-fill');
        const percentText = document.getElementById('percent-text');
        const statusText = document.getElementById('status-text');
        const manualBtn = document.getElementById('manual-btn');

        const phrases = [
            "Setting the mood...",
            "Dimming the lights...",
            "Tuning the lofi...",
            "Preparing the lounge...",
            "Almost there..."
        ];

        function startSequence() {
            const interval = setInterval(() => {
                progress += 1;
                
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(interval);
                    // Standard practice: auto-redirect on finish
                    window.location.href = inviteLink;
                }

                loader.style.width = `${progress}%`;
                percentText.innerText = `${Math.floor(progress)}%`;

                // Update status text based on progress
                const phaseIdx = Math.floor((progress / 100) * phrases.length);
                if (phrases[phaseIdx]) {
                    statusText.innerText = phrases[phaseIdx];
                }

                // Show button early just in case
                if (progress > 30) {
                    manualBtn.style.opacity = "1";
                    manualBtn.style.pointerEvents = "auto";
                }
            }, 60);
        }

        window.onload = startSequence;
    </script>
